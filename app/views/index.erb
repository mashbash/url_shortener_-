<div class="content">
  <h1>Welcome to Shorty!</h1>
    <p>Lets login!</p>
    <form action="/login" method="post">
      <input size = "30" type="email" name="email" placeholder='Enter your email...' required>
      <br><br>
      <input size = "30" type="password" name="password" placeholder='Enter your password...' required>
      <br><br>
      <input type='submit' value='login'>
    </form>
    <br><br>
    <p>If you don't have an account, let's create one!</p>
      <div id="error-messages">
      <% if @user && @user.errors %>
        <%= @user.errors.full_messages.join('<br>') %>
      <% end %>
    </div>
      
    <form action="/new" method="post">
      <input size = "30" type="text" name="first_name" placeholder='Enter your first name...' required>
      <br><br>
      <input size = "30" type="text" name="last_name" placeholder='Enter your last_name...' required>
      <br><br>
      <input size = "30" type="email" name="email" placeholder='Enter your email...' required>
      <br><br>
      <input size = "30" type="password" name="password" placeholder='Enter your password...' required>
      <br><br>
      <input type='submit' value='create account'>
    </form>
</div>
