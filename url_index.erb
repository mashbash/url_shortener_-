    <link rel="stylesheet" href="/css/application.css">
    <style type="text/css"></style>
</HEAD>



<div class="container">
  <h1>The world greatest url-shortener</h1>
  unless the url is too long... ;-(
  <br><br>
  
<div class="form">
  <form action="/urls" method="post">
    <% if @url && @url.errors %>
    <div id="error"><%= @url.errors.messages[:long_url].first %></div>
    <br><br>
    <% end %>
    <input size = "40" type="text" name="long_url" placeholder='Put your long url in here...'>
    <br><br>

    <input type="submit" class='input'>
  </form>
</div>

<h2>&nbsp;All URLs</h2>
<ul>
  <% @urls.each do |url| %>
    <li>Long URL: &nbsp;<a href=<%= url.long_url %>><%= url.long_url %> </a><br>
        Short URL:&nbsp;<a href=<%= url.short_url %> >http://localhost:9292/<%= url.short_url %> </a><br>
        Times clicked: <%= url.counter %>
      <br><br>
    </li>
  <% end %>
</ul>




